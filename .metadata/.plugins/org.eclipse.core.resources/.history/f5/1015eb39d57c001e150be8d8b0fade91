import java.util.Scanner;

public class MatrizAula102 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Digite o tamanho da matriz: ");
		int n = sc.nextInt();
		sc.nextLine();
		int[][] mat = new int[n][n];
		int count = 0;
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				System.out.print("Digite o valor a ser guardado: ");
				mat[i][j] = sc.nextInt();
			}
		}

		System.out.println("Main Diagonal: ");
		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				if (i == j) {
					System.out.print(mat[i][j] + " ");
				}
			}
		}

		for (int i = 0; i < n; i++) {
			for (int j = 0; j < n; j++) {
				if (mat[i][j] < 0) {
					count++;
				}
			}
		}

		System.out.print("\nNegative numbers: " + count);

		sc.close();
	}

}
